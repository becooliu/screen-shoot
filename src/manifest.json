{
  "manifest_version": 3,
  "name": "Chrome coordinate Capture",
  "version": "1.0",
  "description": "use coordinate to capture specified area",
  "permissions": ["activeTab", "scripting", "downloads", "storage"],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
